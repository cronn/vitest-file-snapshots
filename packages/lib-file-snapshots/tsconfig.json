{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "erasableSyntaxOnly": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./types",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["tsup.config.ts", "vitest.config.ts", "./src/**/*.ts"]
}
